{
  "name": "lc_backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "jasmine": "jasmine --config=jasmine.json",
    "migrate:run": "npx db-migrate up:all",
    "migrate:reset": "npx db-migrate reset",
    "docker:startTest": "docker-compose --env-file .env up db_test -d",
    "docker:down": "docker-compose down -v",
    "delDbTest": "npx db-migrate db:drop test",
    "test": "npm run docker:down && npm run docker:startTest && npm run migrate:reset --test && npm run migrate:run --test && npm run build && npm run jasmine && npm run delDbTest && npm run docker:down",
    "docker:startDev": "docker-compose --env-file .env up db_dev -d",
    "start:dev": "npm run docker:startDev && nodemon src/app.ts",
    "start": "npm run docker:startDev && npm run build && node dist/app.js",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --config .prettierrc --write \"**/*.+(js|ts|json)\"",
    "fix": "eslint --fix src/**/*.{ts,js,json,md}"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/db-migrate-pg": "^0.0.10",
    "@types/express": "^4.17.15",
    "@types/jasmine": "^4.3.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.13",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine": "^4.5.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
